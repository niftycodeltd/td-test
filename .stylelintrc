{
	"extends": ["stylelint-config-standard"],
	"plugins": ["stylelint-order"],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"apply",
					"responsive",
					"screen",
					"tailwind",
					"variants"
				]
			}
		],
		"function-no-unknown": [
			true,
			{
				"ignoreFunctions": ["theme"]
			}
		]
	}
}
